<div>
  <div>
    <h2>LOGIN</h2>

    <form class='login-form'>
      <div>
        <label for='email-login'>EMAIL:</label>
        <input type='text' name='email' id='email-login' />
      </div>
      <div>
        <label for='password-login'>PASSWORD:</label>
        <input type='password' name='password' id='password-login' />
      </div>
      <div>
        <button type='submit'>LOGIN</button>
      </div>
    </form>
  </div>
  <div>
    <h2>SIGN UP</h2>

    <form class='signup-form'>
      <div>
        <label for='name-signup'>NAME</label>
        <input type='text' name='email' id='name-signup' />
      </div>
      <div>
        <label for='email-signup'>EMAIL:</label>
        <input type='text' name='email' id='email-signup' />
      </div>
      <div>
        <label for='password-signup'>PASSWORD:</label>
        <input type='password' name='password' id='password-signup' />
        <button id='password-btn' onclick='showPassword()'>SHOW PASSWORD</button>
      </div>
      <div>
        <button type='submit'>SIGN UP</button>
      </div>
    </form>
  </div>
</div>

