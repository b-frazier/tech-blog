<div>
  <h2>Welcome, {{name}}</h2>
</div>

<div>
  <div>
    <h2>Add a new blog post</h2>
    <form class='new-post'>
      <div>
        <input
          class='form-control my-3'
          placeholder='Post Title'
          type='text'
          name='post-title'
          id='post-title'
        />
      </div>
      <div>
        <textarea
          class='form-control'
          name='post-body'
          id='post-body'
          cols='30'
          rows='10'
        ></textarea>
      </div>
      <button type='submit' class='btn btn-success my-3'>POST</button>
    </form>
  </div>

  {{#if blogPost.length}}
    <div>
      <h2>Your posts</h2>

      {{#each blogPost as |blogpost|}}
        <div>
          <div>
            <h3><a href='/post/{{blogpost.id}}'>{{blogpost.title}}</a></h3>
          </div>
          <div>
            <button data-id='{{blogpost.id}}'>DELETE</button>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>