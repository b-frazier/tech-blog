<div class='container my-4'>
  <div>
    <h1 class='display-5'>Welcome, {{name}}</h1>
  </div>

  <div>
    <div>
      <p class='lead my-8'>Add a new blog post</p>
      <form class='new-post'>
        <div>
          <input
            class='form-control my-3'
            placeholder='Post Title'
            type='text'
            name='post-title'
            id='post-title'
          />
        </div>
        <div>
          <textarea
            class='form-control'
            name='post-body'
            id='post-body'
            cols='30'
            rows='10'
          ></textarea>
        </div>
        <button type='submit' class='btn btn-success my-3'>POST</button>
      </form>
    </div>

    {{#if user.BlogPosts.length}}
      <div>
        <h2>Your posts</h2>

        {{#each posts as |post|}}
          <div>
            <div>
              <h3><a href='/post/{{post.id}}'>{{post.post_title}}</a></h3>
            </div>
            <div>
              <button data-id='{{post.id}}'>DELETE</button>
            </div>
          </div>
        {{/each}}
      </div>
    {{/if}}
  </div>
</div>